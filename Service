public class Service {
    private String serviceName; //Encapsulation
    private double serviceCost; //Encapsulation

    public Service(String serviceName, double serviceCost) { //Constructor Overloading
        this.serviceName = serviceName;
        this.serviceCost = serviceCost;
    }

    public String getServiceName() { //Getter
        return serviceName;
    }

    public double getServiceCost() { //Getter
        return serviceCost;
    }

    @Override
    public String toString() { //Overriding method bawaan objek untuk menampilkan infomasi layanan
        return serviceName + " - Rp." + serviceCost;
    }
}
